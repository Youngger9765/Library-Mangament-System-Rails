<h2 id="pagetitle"> Profile </h2>

<div id = 'maincontainer'>
<h3> Email: <%= @user.email if @user.email %></h3>

<h4> 已經借了：</h4>
<table class= "table">
	<tbody>
		<% @user.books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= button_to "還書", return_path(id: book), :class => "button btn-warning", :method => :patch %></td>
		</tr>
		<% end %>
	</tbody>

</table>
<%= button_to "借書", books_path, :class => "button btn-success", :method => :get %>


</div>