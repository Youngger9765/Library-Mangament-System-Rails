<h2 id="pagetitle"> Profile </h2>

<div id = 'container'>

<h3> Email: <%= @user.email if @user.email %></h3>

<h4> Books currently borrowed: </h4>
<table class= "table">
	<tbody>
		<%= @user.books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= button_to "Return", return_path(id: book), :class => "button small", :method => :patch %></td>
		</tr>
		<% end %>
	</tbody>

</table>
<%= button_to "Issue Books", books_show_path, :class => "button medium", :method => :get %>

<div id = 'sharedlinks'>
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>
</div>
</div>