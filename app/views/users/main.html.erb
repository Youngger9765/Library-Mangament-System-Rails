<h2 id="pagetitle"> Profile </h2>

<div id = 'maincontainer'>

<h3> <%= @user.email if @user.email %>  已經借了：</h3>

<table class= "table">
	<tbody>
		<% @user.books.each do |book| %>
		<tr>
			<td>
				<%= link_to book_path(book) do%>
					<%= book.title %>
				<%end%>
			</td>
			<td><%= button_to "還書", return_path(id: book), :class => "button btn-warning", :method => :patch %></td>
		</tr>
		<% end %>
	</tbody>

</table>
<%= button_to "借書", books_path, :class => "button btn-success", :method => :get %>


</div>