<!DOCTYPE html>
<html>
  <head>
    <title>eLib</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag "stylesheet", media: 'all', 'data-turbolinks-track' => 'reload'%>
    <%= javascript_include_tag "js", 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
  	<div id = "navbar" class= "clear">
    
      <div id = "title"><%= link_to_unless_current("eLib", root_path) %></div>

      <div id = 'sharedlinks' class='pull-right'>
        <% if user_signed_in? %>
          <li>
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
          </li>
        <% else %>
          <li>
          <%= link_to('Login', new_user_session_path)  %>  
          </li>
        <% end %>
      </div>

  	</div>
    <div id = "maincontainer2">
        <%= yield %>
    </div>
    
  </body>
</html>