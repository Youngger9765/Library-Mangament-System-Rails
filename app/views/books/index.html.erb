<div class="row container">
    <div class="col-md-4">
        <div class="row">
            <h3>新書</h3>
        </div>
        <ul>
            <% Book.all.order(created_at: :DESC).limit(10).each do |book|%>
                <li>
                    <%= link_to book_path(book.id) do%>
                        <%=book.title%>
                    <%end%>
                </li>
            <%end%>
        </ul>
    </div>
    <div class="col-md-4">
        <div class="row">
            <h3>熱門</h3>
        </div>
        <ul>
            <% Book.order(issue_count: :DESC).limit(10).each do |book|%>
                <li>
                    <%= link_to book_path(book.id) do%>
                        <%=book.title%>（<%= book.issue_count%>）
                    <%end%>
                </li>
            <%end%>
        </ul>
    </div>

</div>

<div class="container" style="margin: 30px;">
    <%= search_form_for @q do |f| %>
        <%= f.label :title_cont %>
        <%= f.search_field :title_cont %>
        <%= f.submit %>
    <% end %>
</div>

<table id="example" class="table table-striped">
    <thead>
        <tr>
            <th style="width: 400px;">
                書名
            </th>
            <th style="width: 200px;"><%= sort_link(@q, :issue_count, '借閱次數') %></th>
            <th style="width:  50px"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td>
                    <div class="pull-left">
                        <% if book.comments.average(:score).present?%>
                            <span style="color: orange;">
                                <% book.comments.average(:score).to_i.times do%>
                                    &#9733;
                                <%end%>
                            </span>
                        <%end%>
                    </div>
                    <br>
                    <div>
                        <%= book.title %>
                    </div>
                </td>
                <td>
                    <%= book.issue_count%>
                </td>
                <td>
                    <%= link_to book_path(book.id),  :class=>"btn btn-default" do %>
                        show
                    <%end%>
                </td>
            </tr>				
        <% end %>
    </tbody>
</table>









