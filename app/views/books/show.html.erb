<table class="table table-striped">
	<thead>
		<tr>
			<th>書名</th>
			<th>剩餘幾本</th>
			<th></th>
		<tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.no_copies %></td>
				<td><%= button_to "借書", issue_path(id: book), :class => "button medium btn-success", :method => :patch %></td>
			</tr>
		<% end %>
	
	</tbody>
</table>




<div class="pull-right">
    <%= paginate @books  %>
</div>